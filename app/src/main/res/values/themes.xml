<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.StarWarsUniverse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="search_style" parent="TextAppearance.AppCompat">
    <item name="maxLines">1</item>
    <item name="android:textSize">@dimen/search_text_size</item>
    <item name="android:gravity">start</item>
    <item name="drawableSize">40dp</item>
  </style>

  <style name="recycler_card_style" parent="TextAppearance.AppCompat">
    <item name="cardCornerRadius">@dimen/search_card_corner_radius</item>
    <item name="android:layout_marginTop">@dimen/card_vert_margin</item>
  </style>

  <style name="recycler_text_style" parent="TextAppearance.AppCompat">
    <item name="android:layout_marginStart">@dimen/search_text_margin</item>
    <item name="android:layout_marginEnd">@dimen/search_text_margin</item>
  </style>

  <style name="info_text_style" parent="TextAppearance.AppCompat">

  </style>

  <style name="header_style" parent="info_text_style">
    <item name="android:textSize">@dimen/info_header_text_size</item>
    <item name="android:layout_marginTop">@dimen/info_header_margin_top</item>
  </style>

  <style name="body_style" parent="info_text_style">
    <item name="android:textSize">@dimen/info_body_text_size</item>
    <item name="android:layout_marginTop">@dimen/info_body_margin_vert</item>
    <item name="android:layout_marginBottom">@dimen/info_body_margin_vert</item>
  </style>

  <style name="text_default_style" parent="TextAppearance.AppCompat">
    <item name="android:textSize">@dimen/default_text_style</item>
    <item name="android:layout_marginTop">@dimen/default_margin_vert</item>
  </style>


</resources>